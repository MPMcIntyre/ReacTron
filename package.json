{
  "name": "electron-react-boilerplate",
  "productName": "ReacTron",
  "description": "Create electron apps with React fast",
  "homepage": "https://www.github.com/MPMcintyre",
  "version": "1.2.0",
  "main": "./dist/main.js",
  "license": "MIT",
  "scripts": {
    "start": "node ./scripts/StartDev.js",
    "electron:start": "electron .",
    "rebuild": "electron-builder install-app-deps",
    "package": "node ./scripts/Package",
    "postinstall": "webpack --mode production &&  electron-builder install-app-deps"
  },
  "dependencies": {
    "open": "^8.2.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "allowToChangeInstallationDirectory": true,
  "build": {
    "appId": "app.boilerplate.Alt",
    "productName": "ReacTron",
    "copyright": "MIT",
    "mac": {
      "icon": "./dist/assets/icons/mac/icon.icns",
      "target": [
        "dmg"
      ],
      "type": "distribution",
      "hardenedRuntime": true,
      "entitlements": "/dist/assets/entitlements.mac.plist",
      "entitlementsInherit": "/dist/assets/entitlements.mac.plist",
      "gatekeeperAssess": false
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "icon": "./dist/assets/icons/win/icon.ico",
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Development"
    },
    "directories": {
      "buildResources": "/dist/",
      "output": "release"
    },
    "files": [
      "!**/*",
      "dist/"
    ]
  },
  "publish": {
    "provider": "Michael McIntyre",
    "owner": "Michael McIntyre",
    "repo": "https://github.com/MPMcintyre"
  },
  "keywords": [
    "electron",
    "boilerplate",
    "react",
    "typescript",
    "ts",
    "sass",
    "webpack",
    "hot",
    "reload",
    "hot-reload",
    "serverless",
    "devTools"
  ],
  "devDependencies": {
    "@babel/types": "^7.15.6",
    "@types/css-font-loading-module": "^0.0.6",
    "@types/react": "^17.0.11",
    "@types/react-dom": "^17.0.8",
    "@types/react-router-dom": "^5.1.8",
    "concurrently": "^6.2.0",
    "css-loader": "^5.2.6",
    "dart-sass": "^1.25.0",
    "electron": "^13.1.4",
    "electron-builder": "^22.13.1",
    "electron-hot-reload": "^0.1.4",
    "electron-notarize": "^1.0.0",
    "electron-reloader-webpack-plugin": "^1.0.2",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.3.2",
    "ncp": "^2.0.0",
    "node-loader": "^2.0.0",
    "sass-loader": "^12.1.0",
    "source-map": "^0.7.3",
    "source-map-loader": "^3.0.0",
    "style-loader": "^3.0.0",
    "ts-loader": "^9.2.5",
    "typescript": "^4.3.5",
    "webpack": "^5.41.1",
    "webpack-bundle-analyzer": "^4.4.2",
    "webpack-cli": "^4.7.2"
  },
  "author": {
    "name": "Michael McIntyre",
    "email": "mpmcintyre@yahoo.com",
    "url": "https://github.com/MPMcintyre"
  },
  "contributors": [
    {
      "name": "Michael McIntyre",
      "email": "mpmcintyre@yahoo.com",
      "url": "https://github.com/MPMcintyre"
    }
  ],
  "repository": {
    "origin": "https://github.com/MPMcintyre"
  }
}
